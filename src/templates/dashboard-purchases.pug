extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Purchases'
  - var parentMenu = 'Account'

//- Navbar
block navbar
  include partials/navbar-marketplace

//- Page Content
block content

  //- dashboard-header.pug template
  include partials/dashboard-header

  .container.mb-5.pb-3
    .bg-light.box-shadow-lg.rounded-lg.overflow-hidden
      .row

        // Sidebar
        aside.col-lg-4
          //- sidebar-dashboard.pug template
          include partials/sidebar-dashboard

        // Content
        section.col-lg-8.pt-lg-4.pb-4.mb-3
          .pt-2.px-4.pl-lg-0.pr-xl-5

            // Title
            .d-sm-flex.flex-wrap.justify-content-between.align-items-center.border-bottom
              h2.h3.py-2.mr-2.text-center.text-sm-left Your purchases
              .py-2
                .form-inline.flex-nowrap.pb-3
                  label(for='sorting').text-nowrap.mr-2 Sort by:
                  select#sorting.custom-select.custom-select-sm.mr-2
                    option Date Purchased
                    option Product Name
                    option Price
                    option Your Rating
                    option Updates
                  button(type='button').btn.btn-outline-secondary.btn-sm.px-2
                    i.czi-arrow-up
            
            // Products list

            // Product
            .media.d-block.d-sm-flex.align-items-center.py-4.border-bottom
              a(href='marketplace-single.html' style='width: 12.5rem;').d-block.mb-3.mb-sm-0.mr-sm-4.mx-auto
                img(src='img/marketplace/products/th01.jpg' alt='Product').rounded-lg
              .media-body.text-center.text-sm-left
                h3.h6.product-title.mb-2
                  a(href='marketplace-single.html') Top View Smartwatch 3D Render
                .text-accent.font-size-sm.mb-1 Standard license
                .custom-control.custom-checkbox
                  input(type="checkbox" id="update-info-1" checked).custom-control-input
                  label(for="update-info-1").custom-control-label.font-size-ms Notify me when this product is updated
                .d-flex.align-items-center.justify-content-center.justify-content-sm-start.pt-2
                  .my-2
                    button(type='button').btn.btn-primary.btn-sm.mr-3
                      i.czi-download.mr-1
                      | Download
                  a(href='#').d-block.text-muted.text-center.my-2
                    +star-rating(0)
                    .font-size-xs Reate this product

            // Product
