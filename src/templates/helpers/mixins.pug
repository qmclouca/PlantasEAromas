//- Vendor styles

mixin vendor-styles
  link(rel='stylesheet' media='screen')&attributes(isNestedFile ? {'href': '../vendor/simplebar/dist/simplebar.min.css'} : {'href': 'vendor/simplebar/dist/simplebar.min.css'})
  link(rel='stylesheet' media='screen')&attributes(isNestedFile ? {'href': '../vendor/tiny-slider/dist/tiny-slider.css'} : {'href': 'vendor/tiny-slider/dist/tiny-slider.css'})
  if vendorStyles.length
    each link in vendorStyles
      link(rel='stylesheet' media='screen')&attributes(isNestedFile ? {'href': '../vendor/' + link} : {'href': 'vendor/' + link})


//- Vendor scripts

mixin vendor-scripts
  script()&attributes(isNestedFile ? {'src': '../vendor/jquery/dist/jquery.slim.min.js'} : {'src': 'vendor/jquery/dist/jquery.slim.min.js'})
  script()&attributes(isNestedFile ? {'src': '../vendor/bootstrap/dist/js/bootstrap.bundle.min.js'} : {'src': 'vendor/bootstrap/dist/js/bootstrap.bundle.min.js'})
  script()&attributes(isNestedFile ? {'src': '../vendor/bs-custom-file-input/dist/bs-custom-file-input.min.js'} : {'src': 'vendor/bs-custom-file-input/dist/bs-custom-file-input.min.js'})
  script()&attributes(isNestedFile ? {'src': '../vendor/simplebar/dist/simplebar.min.js'} : {'src': 'vendor/simplebar/dist/simplebar.min.js'})
  script()&attributes(isNestedFile ? {'src': '../vendor/tiny-slider/dist/min/tiny-slider.js'} : {'src': 'vendor/tiny-slider/dist/min/tiny-slider.js'})
  script()&attributes(isNestedFile ? {'src': '../vendor/smooth-scroll/dist/smooth-scroll.polyfills.min.js'} : {'src': 'vendor/smooth-scroll/dist/smooth-scroll.polyfills.min.js'})
  if vendorScripts.length
    each link in vendorScripts
      script()&attributes(isNestedFile ? {'src': '../vendor/' + link} : {'src': 'vendor/' + link})


//- Image

mixin image(link, alt)
  - var imgAttrs = isNestedFile ? {'src': '../' + link, 'alt': alt} : {'src': link, 'alt': alt}
  img(width!=attributes.width height!=attributes.height class!=attributes.class)&attributes(imgAttrs)


//- Breadcrumb

mixin breadcrumb(skin)
  if breadcrumbs.length
    nav(aria-label='breadcrumb')
      ol()&attributes(skin === 'light' ? {'class': 'breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-start'} : {'class': 'breadcrumb flex-lg-nowrap justify-content-center justify-content-lg-start'})
        li.breadcrumb-item
          a(class='text-nowrap')&attributes(isNestedFile ? {'href':'../index.html'} : {'href':'index.html'})
            i.czi-home
            | Home
        each breadcrumb in breadcrumbs
          if breadcrumb.link
            li.breadcrumb-item.text-nowrap
              - var linkatts = {'href': breadcrumb.link}
              a()&attributes(linkatts)= breadcrumb.title
          else
            li.breadcrumb-item.text-nowrap.active(aria-current='page')= breadcrumb.title


