extends ../partials/layout-docs

//- Override default config variables
append config
  - var pageTitle = 'Utility classes'
  - var isNestedFile = true
  
//- Page Content
block content
  .pb-5
    .alert.alert-info.alert-with-icon.font-size-md.mb-4(role='alert')
      .alert-icon-box
        i.czi-announcement.alert-icon.font-size-lg
      p.mb-0 Bootstrap includes dozens of utilities - classes with a single purpose to reduce the frequency of highly repetitive declarations.
