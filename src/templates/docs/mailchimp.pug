extends ../partials/layout-docs

//- Override default config variables
append config
  - var vendorStyles = ['prismjs/themes/prism.css', 'prismjs/plugins/toolbar/prism-toolbar.css', 'prismjs/plugins/line-numbers/prism-line-numbers.css']
  - var vendorScripts = ['prismjs/components/prism-core.min.js', 'prismjs/components/prism-markup.min.js', 'prismjs/components/prism-clike.min.js', 'prismjs/components/prism-javascript.min.js', 'prismjs/components/prism-pug.min.js', 'prismjs/plugins/toolbar/prism-toolbar.min.js', 'prismjs/plugins/copy-to-clipboard/prism-copy-to-clipboard.min.js', 'prismjs/plugins/line-numbers/prism-line-numbers.min.js']
  - var pageTitle = 'Mailchimp subscription form'
  - var isNestedFile = true
  - var isCodeHighlighting = true
  
//- Page Content
block content
  .pb-5
    p Mailchimp is a marketing automation platform and an email marketing service.
    p In other words this Mailchimp widget will help you to collect user emails right from you website to run email marketing campaign via Mailchimp web application. Below is the live example of the widget that collects emails for Createx Studio. Switch to HTML or Pug tab to see code example and instructions.
    .card.border-0.box-shadow
      .card-header
        ul(role='tablist').nav.nav-tabs.card-header-tabs
          li.nav-item
            a(href='#result9' data-toggle='tab' role='tab' aria-controls='result9' aria-selected='true').nav-link.active Result
          li.nav-item
            a(href='#html9' data-toggle='tab' role='tab' aria-controls='html9' aria-selected='false').nav-link HTML
          li.nav-item
            a(href='#pug9' data-toggle='tab' role='tab' aria-controls='pug9' aria-selected='false').nav-link Pug
      .card-body
        .tab-content
          #result9.tab-pane.fade.show.active(role='tabpanel')
            .widget.pb-2(style='max-width: 24rem;')
              h3.widget-title Subscribe
              form(action='https://studio.us12.list-manage.com/subscribe/post?u=c7103e2c981361a6639545bd5&amp;id=29ca296126' method='post' name='mc-embedded-subscribe-form' target='_blank' novalidate).cz-subscribe-form.validate
                .input-group.input-group-overlay.flex-nowrap
                  .input-group-prepend-overlay
                    span.input-group-text.text-muted.font-size-base
                      i.czi-mail
                  input(type='email' name='EMAIL' placeholder='Your email' required).form-control.prepended-form-control
                  .input-group-append
                    button(type='submit' name='subscribe').btn.btn-primary Subscribe*
                // real people should not fill this in and expect good things - do not remove this or risk form bot signups
                div(style='position: absolute; left: -5000px;' aria-hidden='true')
                  input(type='text' name='b_c7103e2c981361a6639545bd5_29ca296126' tabindex='-1').cz-subscribe-form-antispam
                small.form-text.text-muted *Subscribe to our newsletter to receive early discount offers, updates and new products info.
                .subscribe-status
          #html9.tab-pane.fade(role='tabpanel')
            pre.line-numbers
              code(class='lang-html').
                &lt;!-- Widget: Subscription (MailChimp Ajax)
                        Instructions how to get MailChimp action link:
                        1. Log in to your MailChimp Dashboard / Audience / Manage Audience / Signup forms / Embedded forms
                        2. In the provided code find form action link and copy it
                        3. Paste it to the form action attribute below
                        4. Also in the form code provided by MailChimp find antispam input and copy it name attribute contents
                        5. Paste what you have copied from name attribute to the name attribute of input with class &quot;cz-subscribe-form-antispam&quot;
                --&gt;
                &lt;div class=&quot;widget&quot;&gt;
                  &lt;h3 class=&quot;widget-title&quot;&gt;Subscribe&lt;/h3&gt;
                  &lt;form class=&quot;cz-subscribe-form validate&quot; action=&quot;mailchimp-embedded-form-atcion-link&quot; method=&quot;post&quot; name=&quot;mc-embedded-subscribe-form&quot; target=&quot;_blank&quot; novalidate&gt;
                    &lt;div class=&quot;input-group input-group-overlay flex-nowrap&quot;&gt;
                      &lt;div class=&quot;input-group-prepend-overlay&quot;&gt;
                        &lt;span class=&quot;input-group-text text-muted font-size-base&quot;&gt;
                          &lt;i class=&quot;czi-mail&quot;&gt;&lt;/i&gt;
                        &lt;/span&gt;
                      &lt;/div&gt;
                      &lt;input class=&quot;form-control prepended-form-control&quot; type=&quot;email&quot; name=&quot;EMAIL&quot; placeholder=&quot;Your email&quot; required&gt;
                      &lt;div class=&quot;input-group-append&quot;&gt;
                        &lt;button class=&quot;btn btn-primary&quot; type=&quot;submit&quot; name=&quot;subscribe&quot;&gt;Subscribe*&lt;/button&gt;
                      &lt;/div&gt;
                    &lt;/div&gt;
                    &lt;!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups--&gt;
                    &lt;div style=&quot;position: absolute; left: -5000px;&quot; aria-hidden=&quot;true&quot;&gt;
                      &lt;input type=&quot;text&quot; class=&quot;cz-subscribe-form-antispam&quot; name=&quot;mailchimp-embedded-form-antispam-name-attribute&quot; tabindex=&quot;-1&quot;&gt;
                    &lt;/div&gt;
                    &lt;small class=&quot;form-text text-muted&quot;&gt;*Subscribe to our newsletter to receive early discount offers, updates and new products info.&lt;/small&gt;
                    &lt;div class=&quot;subscribe-status&quot;&gt;&lt;/div&gt;
                  &lt;/form&gt;
                &lt;/div&gt;
          #pug9.tab-pane.fade(role='tabpanel')
            pre.line-numbers
              code(class='lang-pug').
                // Widget: Subscription (MailChimp Ajax)
                // Instructions how to get MailChimp action link:
                // 1. Log in to your MailChimp Dashboard / Audience / Manage Audience / Signup forms / Embedded forms
                // 2. In the provided code find form action link and copy it
                // 3. Paste it to the form action attribute below
                // 4. Also in the form code provided by MailChimp find antispam input and copy it name attribute contents
                // 5. Paste what you have copied from name attribute to the name attribute of input with class &quot;cz-subscribe-form-antispam&quot;
                form(action=&quot;mailchimp-embedded-form-atcion-link&quot;, method=&quot;post&quot;, name=&quot;mc-embedded-subscribe-form&quot;, target=&quot;_blank&quot;, novalidate).cz-subscribe-form.validate
                  .input-group.input-group-overlay.flex-nowrap
                    .input-group-prepend-overlay
                      span.input-group-text.text-muted.font-size-base
                        i.czi-mail
                    input(type=&quot;email&quot;, name=&quot;EMAIL&quot;, placeholder=&quot;Your email&quot;, required).form-control.prepended-form-control
                    .input-group-append
                      button(type=&quot;submit&quot;, name=&quot;subscribe&quot;).btn.btn-primary Subscribe*
                  // real people should not fill this in and expect good things - do not remove this or risk form bot signups
                  div(style=&quot;position: absolute; left: -5000px;&quot; aria-hidden=&quot;true&quot;)
                    input(type=&quot;text&quot;, name=&quot;mailchimp-embedded-form-antispam-name-attribute&quot;, tabindex=&quot;-1&quot;).cz-subscribe-form-antispam
                  small.form-text.text-muted *Subscribe to our newsletter to receive early discount offers, updates and new products info.
                  .subscribe-status
