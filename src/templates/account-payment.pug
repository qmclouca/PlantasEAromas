extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'My payment methods'
  - var breadcrumbs = [{'title': 'Account', 'link': '#'}, {'title': 'Payment methods'}]
  - var parentMenu = 'Account'

//- Navbar + Modal
block navbar
  include partials/modal-payment
  include partials/navbar-3-level-light

//- Page title
block page-title
  include partials/page-title-shop

//- Page Content
block content

  .container.pb-5.mb-2.mb-md-3
    .row

      // Sidebar
      aside.col-lg-4.pt-4.pt-lg-0
        //- sidebar-account.pug template
        include partials/sidebar-account

      // Content  
      section.col-lg-8

        // Toolbar
        .d-none.d-lg-flex.justify-content-between.align-items-center.pt-lg-3.pb-4.pb-lg-5.mb-lg-4
          h6.font-size-base.text-light.mb-0 Primary payment method is used by default
          a(href='account-signin.html').btn.btn-primary.btn-sm
            i.czi-sign-out.mr-2
            | Sign out
        
        // Payment methods list
        .table-responsive.font-size-md
          table.table.table-hover.mb-0
            thead
              tr
                th Your credit / debit cards
                th Name on card
                th Expires on
                th
            tbody
