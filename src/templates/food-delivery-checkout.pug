extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Food Delivery - Checkout'
  - var parentMenu = 'Shop'
  - var breadcrumbs = [{'title': 'Cart', 'link': 'food-delivery-cart.html'}, {'title': 'Checkout'}]
  - var isFoodDelivery = true

//- Navbar
block navbar
  include partials/navbar-food-delivery


//- Page Content
block content
  .container.pt-4.pb-3.py-sm-4
    +breadcrumb('dark')
    .rounded-lg.box-shadow-lg.mt-4.mb-5
      ul.nav.nav-tabs.nav-justified.mb-sm-4
        li.nav-item
          a(href='food-delivery-cart.html').nav-link.font-size-lg.font-weight-medium.py-4 1. Your order
        li.nav-item
          a(href='food-delivery-checkout.html').nav-link.font-size-lg.font-weight-medium.py-4.active 2. Checkout
      form(novalidate).needs-validation.px-3.px-sm-4.px-xl-5.pt-sm-1.pb-4.pb-sm-5
        .row.pb-4.pt-3
          .col-sm-6.mb-4
            label(for='fd-name').font-weight-medium
              | Your name
              sup.text-danger.ml-1 *
            input(type='text' required)#fd-name.form-control
            .invalid-feedback Please enter your name!
          .col-sm-6.mb-4
            label(for='fd-phone').font-weight-medium
              | Phone number
              sup.text-danger.ml-1 *
            input(type='text' required)#fd-phone.form-control
            .invalid-feedback Please enter your phone number!
          .col-sm-6.mb-4
            label(for='fd-time').font-weight-medium
              | Delivery time
              sup.text-danger.ml-1 *
            select#fd-time.form-control.custom-select
              option(value='asap') As soon as possible
              option(value='11:00am') by 11:00 AM
              option(value='11:15am') by 11:15 AM
              option(value='11:30am') by 11:30 AM
              option(value='11:45am') by 11:45 AM
              option(value='12:00pm') by 12:00 PM
              option(value='12:15pm') by 12:15 PM
              option(value='12:30pm') by 12:30 PM
              option(value='12:45pm') by 12:45 PM
              option(value='1:00pm') by 1:00 PM
          .col-sm-6.mb-4
            .font-size-sm.font-weight-medium.mb-3 Drop-off options
            .custom-control.custom-radio.custom-control-inline
              input(type='radio' name='dropoff' checked)#hand-to-me.custom-control-input
              label(for='hand-to-me').custom-control-label Hand it to me
            .custom-control.custom-radio.custom-control-inline
              input(type='radio' name='dropoff')#at-door.custom-control-input
              label(for='at-door').custom-control-label Leave it at my door
        h2.h5.pb-3 Delivery address
        .row.mb-4
          .col-sm-6.mb-4
            label(for='fd-city').font-weight-medium
              | City
              sup.text-danger.ml-1 *
            select#fd-city.form-control.custom-select
              option(value='new-york') New York
              option(value='los-angeles') Los Angeles
              option(value='chicago') Chicago
              option(value='houston') Houston
              option(value='philadelphia') Philadelphia
              option(value='san-diego') San Diego
              option(value='miami') Miami
          .col-sm-6.mb-4
            label(for='fd-address').font-weight-medium
              | Address
              sup.text-danger.ml-1 *
            input(type='text' placeholder='Street, Apartment number or suite' required)#fd-address.form-control
            .invalid-feedback Please enter your address!
          .col-12.mb-4
            label(for='fd-comments').mb-3
              span.badge.badge-info.font-size-xs.mr-2 Note
              span.font-weight-medium Additional comments
            textarea(rows='5')#fd-comments.form-control
        .row
          .col-sm-6.mb-4.mb-sm-0
            h2.h5.pb-2 Cash on delivery
            .custom-control.custom-radio.custom-control-inline.mb-3
              input(type='radio' name='payment' checked)#cash.custom-control-input
              label(for='cash').custom-control-label Pay with cash to the courier
            .d-flex.align-items-center
              label(for='fd-change').text-nowrap.mr-3.mb-0 I need change from
              .input-group( style='width: 8rem;')
                .input-group-prepend
                  span.input-group-text: i.czi-dollar
                input(type='text')#fd-change.form-control.bg-0.pr-3
            h2.h5.mt-3.pt-4.pb-2 Online payment
            .custom-control.custom-radio.custom-control-inline.pb-4
              input(type='radio' name='payment')#online.custom-control-input
              label(for='online').custom-control-label
                | Pay with:&nbsp;&nbsp;&nbsp;
                img(src='img/cards.png' style='width: 187px;' alt='Cerdit Cards').d-inline-block.align-middle
            button(type='submit').btn.btn-primary.btn-block.mt-3 Complete order
          .col-sm-6
            .d-fle.flex-column.h-100.rounded-lg.bg-secondary.px-3.px-sm-4.py-4
              h2.h5.pb-3 Your total
              .d-flex.justify-content-between.font-size-md.border-bottom.pb-3.mb-3
                span Subtotal:
                span.text-heading $24.<small>00</small>
              .d-flex.justify-content-between.font-size-md.border-bottom.pb-3.mb-3
                span Delivery:
                span.text-heading $6.<small>00</small>
              .d-flex.justify-content-between.font-size-md.mb-2
                span Total:
                span.text-heading.font-weight-medium $30.<small>00</small>


//- Footer
block footer
  include partials/footer-food-delivery
  