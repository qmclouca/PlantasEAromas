extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'My addresses'
  - var breadcrumbs = [{'title': 'Account', 'link': '#'}, {'title': 'Addresses'}]
  - var parentMenu = 'Account'

//- Navbar + Modal
block navbar
  include partials/modal-address
  include partials/navbar-3-level-light

//- Page title
block page-title
  include partials/page-title-shop

//- Page Content
block content

  .container.pb-5.mb-2.mb-md-3
    .row

      // Sidebar
      aside.col-lg-4.pt-4.pt-lg-0
        //- sidebar-account.pug template
        include partials/sidebar-account

      // Content  
      section.col-lg-8

        // Toolbar
        .d-none.d-lg-flex.justify-content-between.align-items-center.pt-lg-3.pb-4.pb-lg-5.mb-lg-4
          h6.font-size-base.text-light.mb-0 List of your registered addresses:
          a(href='account-signin.html').btn.btn-primary.btn-sm
            i.czi-sign-out.mr-2
            | Sign out
        
        // Addresses list
        .table-responsive.font-size-md
          table.table.table-hover.mb-0
            thead
              tr
                th Address
                th Actions
            tbody
              tr
                td.py-3.align-middle
                  | 396 Lillian Blvd, Holbrook, NY 11741, USA
                  span.align-middle.badge.badge-info.ml-2 Primary
                td.py-3.align-middle
                  a(href='#' data-toggle='tooltip' title='Edit').nav-link-style.mr-2
                    i.czi-edit
                  a(href='#' data-toggle='tooltip' title='Remove').nav-link-style.text-danger
                    .czi-trash
              tr
                td.py-3.align-middle
                  | 769, Industrial, West Chicago, IL 60185, USA
                td.py-3.align-middle
                  a(href='#' data-toggle='tooltip' title='Edit').nav-link-style.mr-2
                    i.czi-edit
                  a(href='#' data-toggle='tooltip' title='Remove').nav-link-style.text-danger
                    .czi-trash
              tr
                td.py-3.align-middle
                  | 514 S. Magnolia St. Orlando, FL 32806, USA
                td.py-3.align-middle
                  a(href='#' data-toggle='tooltip' title='Edit').nav-link-style.mr-2
                    i.czi-edit
                  a(href='#' data-toggle='tooltip' title='Remove').nav-link-style.text-danger
                    .czi-trash
        hr.pb-4
        .text-sm-right
          a(href='#add-address' class='btn btn-primary' data-toggle='modal') Add new address

//- Footer
block footer
  include partials/footer-dark
