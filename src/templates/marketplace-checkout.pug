extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Checkout'
  - var breadcrumbs = [{'title': 'Market', 'link': 'marketplace-category.html'}, {'title': 'Checkout'}]
  - var parentMenu = 'Shop'

//- Navbar
block navbar
  include partials/navbar-marketplace

//- Page Title
block page-title
  include partials/page-title-marketplace
  
//- Page Content
block content

  .container.mb-5.pb-3
    .bg-light.box-shadow-lg.rounded-lg.overflow-hidden
      .row

        // Content
        section.col-lg-8.pt-2.pt-lg-4.pb-4.mb-3
          .pt-2.px-4.pr-lg-0.pl-xl-5

            // Title
            h2.h6.border-bottom.pb-3.mb-3 Billing details

            // Billing detail
            .row.pb-4
              .col-sm-6.form-group
                label(for='mc-fn') First name <span class='text-danger'>*</span>
                input(type='text' value='Jonathan')#mc-fn.form-control
              .col-sm-6.form-group
                label(for='mc-ln') Last name <span class='text-danger'>*</span>
                input(type='text' value='Doe')#mc-ln.form-control
              .col-12.form-group
                label(for='mc-email') Email address <span class='text-danger'>*</span>
                input(type='email' value='contact@createx.studio')#mc-email.form-control
              .col-sm-6.form-group
                label(for='mc-company') Company
                input(type='text' value='Createx Studio')#mc-company.form-control
              .col-sm-6.form-group
                label(for='mc-country') Country <span class='text-danger'>*</span>
                select(id='mc-country' class='custom-select')
                  option(value) Select country
                  option(value='Argentina') Argentina
                  option(value='Belgium') Belgium
                  option(value='France') France
                  option(value='Germany') Germany
                  option(value='Madagascar' selected) Madagascar
                  option(value='Spain') Spain
                  option(value='UK') United Kingdom
                  option(value='USA') USA

            // Order preview on mobile (screens small than 991px)
            .widget.mb-3.d-lg-none
              h2.widget-title Order summary
              .media.align-items-center.pb-2.border-bottom
                a(href='marketplace-single.html').d-block.mr-2
                  +image('img/marketplace/products/widget/01.jpg', 'Product')(width='64').rounded-sm
                .media-body.pl-1
                  h6.widget-product-title
                    a(href='marketplace-single.html') UI Isometric Devices Pack
                  .widget-product-meta
                    span.text-accent.border-right.pr-2.mr-2
                      | $23.
                      small 99
                    span.font-size-xs.text-muted Standard license
              .media.align-items-center.py-2.border-bottom
                a(href='marketplace-single.html').d-block.mr-2
                  +image('img/marketplace/products/widget/02.jpg', 'Product')(width='64').rounded-sm
                .media-body.pl-1
                  h6.widget-product-title
                    a(href='marketplace-single.html') Project Devices Showcase
                  .widget-product-meta
                    span.text-accent.border-right.pr-2.mr-2
                      | $18.
                      small 99
                    span.font-size-xs.text-muted Standard license
              .media.align-items-center.py-2.border-bottom
                a(href='marketplace-single.html').d-block.mr-2
                  +image('img/marketplace/products/widget/03.jpg', 'Product')(width='64').rounded-sm
                .media-body.pl-1
                  h6.widget-product-title
                    a(href='marketplace-single.html') Gravity Devices UI Mockup
                  .widget-product-meta
                    span.text-accent.border-right.pr-2.mr-2
                      | $15.
                      small 99
                    span.font-size-xs.text-muted Standard license
              ul.list-unstyled.font-size-sm.py-3
                li.d-flex.justify-content-between.align-items-center
                  span.mr-2 Subtotal:
                  span.text-right $58.<small>97</small>
                li.d-flex.justify-content-between.align-items-center
                  span.mr-2 Taxes:
                  span.text-right $10.<small>45</small>
                li.d-flex.justify-content-between.align-items-center.font-size-base
                  span.mr-2 Total:
                  span.text-right $69.<small>42</small>
        
            // Payment methods accordion
            div(id='payment-method' class='accordion' role='tablist').mb-2
              .card
                .card-header(role='tab')
                  h3.accordion-heading
                    a(href='#card' data-toggle='collapse')
                      i.czi-card.font-size-lg.mr-2.mt-n1.align-middle
                      | Pay with Credit Card
                      span.accordion-indicator
                div(id='card' class='collapse show' data-parent='#payment-method' role='tabpanel')
                  .card-body
                    p.font-size-sm
                      | We accept following credit cards:&nbsp;&nbsp;
                      img(src='img/cards.png' style='width: 187px;' alt='Cerdit Cards').d-inline-block.align-middle
                    .card-wrapper
                    form.interactive-credit-card.row
                      .form-group.col-sm-6
                        input(type='text' name='number' placeholder='Card Number' required).form-control
                      .form-group.col-sm-6
                        input(type='text' name='name' placeholder='Full Name' required).form-control
                      .form-group.col-sm-3
                        input(type='text' name='expiry' placeholder='MM/YY' required).form-control
                      .form-group.col-sm-3
                        input(type='text' name='cvc' placeholder='CVC' required).form-control
                      .col-sm-6
                        button(type='submit').btn.btn-primary.btn-block.mt-0 Place order
              .card
                .card-header(role='tab')
                  h3.accordion-heading
                    a(href='#paypal' class='collapsed' data-toggle='collapse')
                      i.czi-paypal.mr-2.align-middle
                      | Pay with PayPal
                      span.accordion-indicator
                div(id='paypal' class='collapse' data-parent='#payment-method' role='tabpanel')
                  .card-body.font-size-sm
                    p <span class='font-weight-medium'>PayPal</span> - the safer, easier way to pay
                    button(type='button').btn.btn-primary Checkout with PayPal
              .card
                .card-header(role='tab')
                  h3.accordion-heading
                    a(href='#points' class='collapsed' data-toggle='collapse')
                      i.czi-money-bag.mr-2
                      | Pay with my account balance
                      span.accordion-indicator
                div(id='points' class='collapse' data-parent='#payment-method' role='tabpanel')
                  .card-body
                    p
                      | You currently have
                      span.font-weight-medium &nbsp;$1,375.<small>00</small>
                      | &nbsp;on your account balance.
                    button(type='submit').btn.btn-primary.mt-0 Pay with account balance


        // Sidebar
        // Order preview on desktop (screens larger than 991px)
        aside.col-lg-4.d-none.d-lg-block
          hr.d-lg-none
          .cz-sidebar-static.h-100.ml-auto.border-left
            .widget.mb-3
              h2.widget-title.text-center Order summary
              .media.align-items-center.pb-2.border-bottom
                a(href='marketplace-single.html').d-block.mr-2
                  +image('img/marketplace/products/widget/01.jpg', 'Product')(width='64').rounded-sm
                .media-body.pl-1
                  h6.widget-product-title
                    a(href='marketplace-single.html') UI Isometric Devices Pack
                  .widget-product-meta
                    span.text-accent.border-right.pr-2.mr-2
                      | $23.
                      small 00
                    span.font-size-xs.text-muted Standard license
              .media.align-items-center.py-2.border-bottom
                a(href='marketplace-single.html').d-block.mr-2
                  +image('img/marketplace/products/widget/02.jpg', 'Product')(width='64').rounded-sm
                .media-body.pl-1
                  h6.widget-product-title
                    a(href='marketplace-single.html') Project Devices Showcase
                  .widget-product-meta
                    span.text-accent.border-right.pr-2.mr-2
                      | $18.
                      small 00
                    span.font-size-xs.text-muted Standard license
              .media.align-items-center.py-2.border-bottom
                a(href='marketplace-single.html').d-block.mr-2
                  +image('img/marketplace/products/widget/03.jpg', 'Product')(width='64').rounded-sm
                .media-body.pl-1
                  h6.widget-product-title
                    a(href='marketplace-single.html') Gravity Devices UI Mockup
                  .widget-product-meta
                    span.text-accent.border-right.pr-2.mr-2
                      | $15.
                      small 00
                    span.font-size-xs.text-muted Standard license
              ul.list-unstyled.font-size-sm.pt-3.pb-2.border-bottom
                li.d-flex.justify-content-between.align-items-center
                  span.mr-2 Subtotal:
                  span.text-right $56.<small>00</small>
                li.d-flex.justify-content-between.align-items-center
                  span.mr-2 Taxes:
                  span.text-right $9.<small>30</small>
              h3.font-weight-normal.text-center.my-4
                | $65.
                small 30

//- Footer
block footer
  include partials/footer-marketplace
