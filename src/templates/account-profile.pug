extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Profile info'
  - var breadcrumbs = [{'title': 'Account', 'link': '#'}, {'title': 'Profile info'}]
  - var parentMenu = 'Account'

//- Navbar
block navbar
  include partials/navbar-3-level-light

//- Page title
block page-title
  include partials/page-title-shop

//- Page Content
block content

  .container.pb-5.mb-2.mb-md-3
    .row

      // Sidebar
      aside.col-lg-4.pt-4.pt-lg-0
        //- sidebar-account.pug template
        include partials/sidebar-account

      // Content  
      section.col-lg-8

        // Toolbar
        .d-none.d-lg-flex.justify-content-between.align-items-center.pt-lg-3.pb-4.pb-lg-5.mb-lg-3
          h6.font-size-base.text-light.mb-0 Update you profile details below:
          a(href='account-signin.html').btn.btn-primary.btn-sm
            i.czi-sign-out.mr-2
            | Sign out
        
        // Profile form
        form
          .bg-secondary.rounded-lg.p-4.mb-4
            .media.align-items-center
              img(src='img/shop/account/avatar.jpg' width='90' alt='Susan Gardner')
              .media-body.pl-3
                button(type='button').btn.btn-light.btn-shadow.btn-sm.mb-2
                  i.czi-loading.mr-2
                  | Change avatar
                .p.mb-0.font-size-ms.text-muted Upload JPG, GIF or PNG image. 300 x 300 required.
          .row
            .col-sm-6
              .form-group
                label(for='account-fn') First Name
                input(type='text' id='account-fn' value='Susan').form-control
            .col-sm-6
              .form-group
                label(for='account-ln') Last Name
                input(type='text' id='account-ln' value='Gardner').form-control
            .col-sm-6
              .form-group
                label(for='account-email') Email Address
                input(type='email' id='account-email' value='s.gardner@example.com' disabled).form-control
            .col-sm-6
              .form-group
                label(for='account-phone') Phone Number
                input(type='text' id='account-phone' value='+7 (805) 348 95 72' required).form-control
            .col-sm-6
              .form-group
                label(for='account-pass') New Password
                .password-toggle
                  input(type='password' id='account-pass').form-control
                  label.password-toggle-btn
                    input(type="checkbox").custom-control-input
                    i.czi-eye.password-toggle-indicator
                    span.sr-only Show password
            .col-sm-6
              .form-group
                label(for='account-confirm-pass') Confirm Password
                .password-toggle
                  input(type='password' id='account-confirm-pass').form-control
                  label.password-toggle-btn
                    input(type="checkbox").custom-control-input
                    i.czi-eye.password-toggle-indicator
                    span.sr-only Show password
            .col-12
              hr.mt-2.mb-3
              .d-flex.flex-wrap.justify-content-between.align-items-center
                .custom-control.custom-checkbox.d-block
                  input(type='checkbox' id='subscribe_me' checked).custom-control-input
                  label(for='subscribe_me').custom-control-label Subscribe me to Newsletter
                button(type='button' class='btn btn-primary mt-3 mt-sm-0') Update profile

//- Footer
block footer
  include partials/footer-dark
