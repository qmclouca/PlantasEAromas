extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'My orders'
  - var breadcrumbs = [{'title': 'Account', 'link': '#'}, {'title': 'Orders history'}]
  - var parentMenu = 'Account'

//- Navbar + Modal
block navbar
  include partials/modal-order
  include partials/navbar-3-level-light

//- Page title
block page-title
  include partials/page-title-shop

//- Page Content
block content

  .container.pb-5.mb-2.mb-md-3
    .row

      // Sidebar
      aside.col-lg-4.pt-4.pt-lg-0
        //- sidebar-account.pug template
        include partials/sidebar-account

      // Content  
      section.col-lg-8

        // Toolbar
        .d-flex.justify-content-between.align-items-center.pt-lg-2.pb-4.pb-lg-5.mb-lg-3
          .form-inline
            label(for='order-sort').text-light.opacity-75.text-nowrap.mr-2.d-none.d-lg-block Sort orders:
            select#order-sort.form-control.custom-select
              option All
              option Delivered
              option In Progress
              option Delayed
              option Canceled
          a(href='account-signin.html').btn.btn-primary.btn-sm.d-none.d-lg-inline-block
            i.czi-sign-out.mr-2
            | Sign out
        
        // Orders list
        .table-responsive.font-size-md
          table.table.table-hover.mb-0
            thead
              tr
                th Order #
                th Date Purchased
                th Status
                th Total
            tbody
              tr
                td.py-3
                  a(href='#order-details' data-toggle='modal').nav-link-style.font-weight-medium.font-size-sm 34VB5540K83
                td.py-3 May 21, 2019
                td.py-3
                  span.badge.badge-info.m-0 In Progress
                td.py-3 $358.75
              tr
                td.py-3
                  a(href='#order-details' data-toggle='modal').nav-link-style.font-weight-medium.font-size-sm 78A643CD409
                td.py-3 December 09, 2018
                td.py-3
                  span.badge.badge-danger.m-0 Canceled
                td.py-3
                  span $760.50
              tr
                td.py-3
                  a(href='#order-details' data-toggle='modal').nav-link-style.font-weight-medium.font-size-sm 112P45A90V2
                td.py-3 October 15, 2018
                td.py-3
                  span.badge.badge-warning.m-0 Delayed
                td.py-3 $1,264.00
              tr
                td.py-3
                  a(href='#order-details' data-toggle='modal').nav-link-style.font-weight-medium.font-size-sm 28BA67U0981
                td.py-3 July 19, 2018
                td.py-3
                  span.badge.badge-success.m-0 Delivered
                td.py-3 $198.35
              tr
                td.py-3
                  a(href='#order-details' data-toggle='modal').nav-link-style.font-weight-medium.font-size-sm 502TR872W2
                td.py-3 April 04, 2018
                td.py-3
                  span.badge.badge-success.m-0 Delivered
