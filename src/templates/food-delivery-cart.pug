extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Food Delivery - Cart'
  - var parentMenu = 'Shop'
  - var breadcrumbs = [{'title': 'Cart'}]
  - var isFoodDelivery = true

//- Navbar
block navbar
  include partials/navbar-food-delivery


//- Page Content
block content
  .container.pt-4.pb-3.py-sm-4
    +breadcrumb('dark')
    .rounded-lg.box-shadow-lg.mt-4.mb-5
      ul.nav.nav-tabs.nav-justified.mb-4
        li.nav-item
          a(href='food-delivery-cart.html').nav-link.font-size-lg.font-weight-medium.py-4.active 1. Your order
        li.nav-item
          a(href='food-delivery-checkout.html').nav-link.font-size-lg.font-weight-medium.py-4 2. Checkout
      .px-3.px-sm-4.px-xl-5.pt-1.pb-4.pb-sm-5
        .row

          // Items in cart
          .col-lg-8.col-md-7.pt-sm-2
            // Item
            .d-sm-flex.justify-content-between.align-items-center.mt-3.mb-4.pb-3.border-bottom
              .media.media-ie-fix.d-block.d-sm-flex.align-items-center.text-center.text-sm-left
                a(href='#' style='width: 7.5rem;').d-inline-block.mx-auto.mr-sm-4
                  img(src='img/food-delivery/cart/01.jpg' alt='Pizza')
                .media-body.pt-2
                  h3.product-title.font-size-base.mb-2
                    a(href='#') Pizza Pepperoni with Tomatoes
                  .font-size-sm
                    span.text-muted.mr-2 Size:
                    | Medium
                  .font-size-sm
                    span.text-muted.mr-2 Base:
                    | Standard
                  .font-size-lg.text-accent.pt-2 $9.<small>00</small>
              .pt-2.pt-sm-0.pl-sm-3.mx-auto.mx-sm-0.text-center.text-sm-left(style='max-width: 9rem;')
                .form-group.mb-0
                  label(for='quantity1').font-weight-medium Quantity
                  input(type='number' id='quantity1' value='1').form-control
                button(type='button').btn.btn-link.px-0.text-danger
                  i.czi-close-circle.mr-2
                  span.font-size-sm Remove
            // Item
            .d-sm-flex.justify-content-between.align-items-center.mb-4.pb-3.border-bottom
              .media.media-ie-fix.d-block.d-sm-flex.align-items-center.text-center.text-sm-left
                a(href='#' style='width: 7.5rem;').d-inline-block.mx-auto.mr-sm-4
                  img(src='img/food-delivery/cart/02.jpg' alt='Burger')
                .media-body.pt-2
                  h3.product-title.font-size-base.mb-2
                    a(href='#') Beef Burger with Fries
                  .font-size-sm
                    span.text-muted.mr-2 Size:
                    | XL
                  .font-size-sm
                    span.text-muted.mr-2 Sauce:
                    | Barbeque
                  .font-size-lg.text-accent.pt-2 $12.<small>00</small>
              .pt-2.pt-sm-0.pl-sm-3.mx-auto.mx-sm-0.text-center.text-sm-left(style='max-width: 9rem;')
                .form-group.mb-0
                  label(for='quantity2').font-weight-medium Quantity
                  input(type='number' id='quantity2' value='1').form-control
                button(type='button').btn.btn-link.px-0.text-danger
                  i.czi-close-circle.mr-2
                  span.font-size-sm Remove
            // Item
            .d-sm-flex.justify-content-between.align-items-center.mb-4.pb-3.border-bottom
              .media.media-ie-fix.d-block.d-sm-flex.align-items-center.text-center.text-sm-left
                a(href='#' style='width: 7.5rem;').d-inline-block.mx-auto.mr-sm-4
                  img(src='img/food-delivery/cart/03.jpg' alt='Drink')
                .media-body.pt-2
                  h3.product-title.font-size-base.mb-2
                    a(href='#') Coca Cola Can, 335ml
                  .font-size-sm
                    span.text-muted.mr-2 Size:
                    | 335ml
                  .font-size-lg.text-accent.pt-2 $1.<small>00</small>
              .pt-2.pt-sm-0.pl-sm-3.mx-auto.mx-sm-0.text-center.text-sm-left(style='max-width: 9rem;')
                .form-group.mb-0
                  label(for='quantity3').font-weight-medium Quantity
                  input(type='number' id='quantity3' value='3').form-control
                button(type='button').btn.btn-link.px-0.text-danger
                  i.czi-close-circle.mr-2
                  span.font-size-sm Remove
          
          // Sidebar
          .col-lg-4.col-md-5.pt-3.pt-sm-4
            .rounded-lg.bg-secondary.px-3.px-sm-4.py-4
              .text-center.mb-4.pb-3.border-bottom
                h3.h5.mb-3.pb-1 Total
                h4.font-weight-normal
                  | $24.
                  small 00
              .form-group.mb-4
                label(for='order-comments').mb-3
                  span.badge.badge-info.font-size-xs.mr-2 Note
                  span.font-weight-medium Additional comments
                textarea(rows='4')#order-comments.form-control
              h3.h6.mb-4 Apply promo code
              form(method='post' novalidate).needs-validation
                .form-group
                  input(type='text' placeholder='Promo code' required).form-control
                  .invalid-feedback Please provide promo code.
                button(type='submit').btn.btn-outline-primary.btn-block Apply promo code
              a(href='food-delivery-checkout.html').btn.btn-primary.btn-shadow.btn-block.mt-4.mb-3
                i.czi-card.font-size-lg.mr-2
                | Proceed to Checkout


//- Footer
block footer
  include partials/footer-food-delivery