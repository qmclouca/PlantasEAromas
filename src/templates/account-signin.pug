extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Account Sign In'
  - var parentMenu = 'Account'

//- Navbar
block navbar
  include partials/navbar-3-level-light
  
//- Page Content
block content

  .container.py-4.py-lg-5.my-4
    .row
      .col-md-6
        .card.border-0.box-shadow
          .card-body
            h2.h4.mb-1 Sign in
            .py-3
              h3.d-inline-block.align-middle.font-size-base.font-weight-semibold.mb-2.mr-2 With social account:
              .d-inline-block.align-middle
                a(href='#' data-toggle='tooltip' title='Sign in with Google').social-btn.sb-google.mr-2.mb-2
                  i.czi-google
                a(href='#' data-toggle='tooltip' title='Sign in with Facebook').social-btn.sb-facebook.mr-2.mb-2
                  i.czi-facebook
                a(href='#' data-toggle='tooltip' title='Sign in with Twitter').social-btn.sb-twitter.mr-2.mb-2
                  i.czi-twitter
            hr
            h3.font-size-base.pt-4.pb-2 Or using form below
            form(novalidate).needs-validation
              .input-group-overlay.form-group
                .input-group-prepend-overlay
                  span.input-group-text
                    i.czi-mail
                input(type='email' placeholder='Email' required).form-control.prepended-form-control
              .input-group-overlay.form-group
                .input-group-prepend-overlay
                  span.input-group-text
                    i.czi-locked
                .password-toggle
                  input(type='password' placeholder='Password' required).form-control.prepended-form-control
                  label.password-toggle-btn
                    input(type='checkbox').custom-control-input
                    i.czi-eye.password-toggle-indicator
                    span.sr-only Show password
              .d-flex.flex-wrap.justify-content-between
                .custom-control.custom-checkbox
                  input(type='checkbox' checked)#remember_me.custom-control-input
                  label(for='remember_me').custom-control-label Remember me
                a(href='account-password-recovery.html').nav-link-inline.font-size-sm Forgot password?
              hr.mt-4
              .text-right.pt-4
                button(type='submit').btn.btn-primary
                  i.czi-sign-in.mr-2.ml-n21
                  | Sign In
      .col-md-6.pt-4.mt-3.mt-md-0
        h2.h4.mb-3 No account? Sign up
        p.font-size-sm.text-muted.mb-4 Registration takes less than a minute but gives you full control over your orders.
        form(novalidate).needs-validation
          .row
            .col-sm-6
              .form-group
                label(for='reg-fn') First Name
                input(type='text' required)#reg-fn.form-control
                .invalid-feedback Please enter your first name!
            .col-sm-6
              .form-group
                label(for='reg-ln') Last Name
                input(type='text' required)#reg-ln.form-control
                .invalid-feedback Please enter your last name!
            .col-sm-6
              .form-group
                label(for='reg-email') E-mail Address
                input(type='email' required)#reg-email.form-control
                .invalid-feedback Please enter valid email address!
            .col-sm-6
              .form-group
                label(for='reg-phone') Phone Number
                input(type='text' required)#reg-phone.form-control
                .invalid-feedback Please enter your phone number!
            .col-sm-6
              .form-group
                label(for='reg-password') Password
                input(type='password' required)#reg-password.form-control
                .invalid-feedback Please enter password!
            .col-sm-6
              .form-group
                label(for='reg-password-confirm') Confirm Password
                input(type='password' required)#reg-password-confirm.form-control
                .invalid-feedback Passwords do not match!
          .text-right
            button(type='submit').btn.btn-primary
              i.czi-user.mr-2.ml-n1
              | Sign Up

//- Footer
block footer
  include partials/footer-dark
