extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Submit a request'
  - var breadcrumbs = [{'title': 'Help center', 'link': 'help-topics.html'}, {'title': 'Submit request'}]
  - var parentMenu = 'Pages'
  - var isOffcanvasSidebar = 'help'

//- Navbar
block navbar
  include partials/navbar-3-level-light

//- Page title
block page-title
  include partials/page-title-light
  
//- Page Content
block content

  .container.py-5.mt-md-2.mb-md-4
    .row
      .col-lg-3

        //- sidebar-help-center.pug template
        include partials/sidebar-help-center

      .col-lg-9
        .alert.alert-info.alert-with-icon.font-size-sm.mb-4(role='alert')
          .alert-icon-box
            i.alert-icon.czi-announcement
          | Our friendly Support team is always here to help you. Begin by selecting a topic we can help you with.
        form(novalidate).needs-validation
          .row
            .col-sm-6
              .form-group
                label(for='help-topic') Select a topic <strong class='text-danger'>*</strong>
                select(required)#help-topic.form-control.custom-select
                  option(value) â€”
                  option(value='Managing Account') Managing Account
                  option(value='Working with Dashboard') Working with Dashboard
                  option(value='Payment Methods') Payment Methods
                  option(value='Delivery Information') Delivery Information
                  option(value='Refund Policy') Refund Policy
                  option(value='Affiliate Program') Affiliate Program
                .invalid-feedback Please choose a topic!
            .col-sm-6
              .form-group
                label(for='help-subject') Request Subject 
                input(type='text')#help-subject.form-control
          .form-group
            label(for='help-message') Request Message <strong class='text-danger'>*</strong>
            textarea(rows='6' required)#help-message.form-control
            .invalid-feedback Please provide a detailed description of your problem!
          .row
            .col-sm-6
              .form-group
                label(for='help-name') Your Name <strong class='text-danger'>*</strong>
                input(type='text' required)#help-name.form-control
                .invalid-feedback Please enter your name!
            .col-sm-6
              .form-group
                label(for='help-email') Your Email <strong class='text-danger'>*</strong>
                input(type='email' required)#help-email.form-control
                .invalid-feedback Please enter valid email address!
          .row
            .col-sm-6
              .form-group
                label(for='help-url') Include a relevant URL
                input(type='text')#help-url.form-control
            .col-sm-6
              .form-group
                label(for='help-file') Attachments
                .custom-file
                  input(type='file' id='help-file').custom-file-input
                  label(for='help-file').custom-file-label Choose file...
          button(type='submit').btn.btn-primary.mr-4 Submit a request
          a(href='#').nav-link-style.d-inline-block.align-middle.font-size-sm.py-2 Privacy policy

//- Footer
block footer
  include partials/footer-dark
