//- Include config.pug file that holds all variables
block config
  include ../helpers/config

//- Mixins - reusable code snippets
include ../helpers/mixins
  
//- Override default config variables
append config
  - var isNestedFile = true
  - var isCodeHighlighting = true

doctype html
html(lang="en")

  //- head.pug template
  include head 
  
  // Body
  body
    
    main.container-fluid

      // Main content
      section.sidenav-enabled.row.pb-3.pb-md-4
        .col-xl-9

          // Navbar
          header(data-scroll-header).navbar.navbar-docs.navbar-expand.navbar-light.fixed-top.bg-light.box-shadow-sm.px-3.px-lg-4
            a(href='typography.html' style='min-width: 7rem;').navbar-brand.d-lg-none.mr-auto
              +image('img/logo-dark.png', 'Cartzilla')(width='142')
            ul.navbar-nav.ml-auto.d-none.d-lg-flex
              li.nav-item
                a(href='../index.html').nav-link
                  i.czi-eye.align-middle.mt-n1.mr-2
                  | Live preview
              li.nav-item: .nav-link.disabled.text-border.px-1 |
              li.nav-item
                a(href='../docs/dev-setup.html').nav-link
                  i.czi-book.align-middle.mt-n1.mr-2
                  | Documentation
              li.nav-item: .nav-link.disabled.text-border.px-1 |
            button(type='button' data-toggle='collapse' data-target='#components-nav').navbar-toggler.d-block.d-lg-none
              span.navbar-toggler-icon
            a(href='https://themes.getbootstrap.com/product/cartzilla-bootstrap-e-commerce-template-ui-kit/' target='_blank' rel='noopener').btn.btn-primary.btn-shadow.ml-2.ml-lg-4
              i.czi-cart.mr-1.d-none.d-sm-inline-block
              | Buy now
      
          // Side navigation
          aside#components-nav.sidenav.collapse.bg-dark
            header.sidenav-header.bg-darker.d-none.d-lg-block
              a(href='typography.html' style='min-width: 7rem;').navbar-brand
                +image('img/logo-light.png', 'Cartzilla')(width='142')
              span.badge.badge-info Components
            .sidenav-body(data-simplebar data-simplebar-auto-hide='true')
              .pt-4.pb-3.mt-3
                .d-flex.d-lg-none.pb-4.mb-4.border-bottom.border-light
                  .w-50.pr-2
                    a(href='../index.html').btn.btn-outline-light.btn-block
                      i.czi-eye.align-middle.mt-n1.mr-2
                      | Live demo
                  .w-50.pl-2
                    a(href='../docs/dev-setup.html').btn.btn-light.btn-block
                      i.czi-book.align-middle.mt-n1.mr-2
                      | Docs
                .widget.widget-links.widget-light.mb-4.pb-2
                  h3.widget-title.text-white Content
                  ul.widget-list
                    li()&attributes(pageTitle === 'Typography' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='typography.html').widget-list-link Typography
                    li()&attributes(pageTitle === 'Icon font' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='icon-font.html').widget-list-link Icon font
                    li()&attributes(pageTitle === 'Code' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='code.html').widget-list-link Code
                    li()&attributes(pageTitle === 'Images & figures' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='images.html').widget-list-link Images &amp; figures
                    li()&attributes(pageTitle === 'Tables' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='tables.html').widget-list-link Tables
                .widget.widget-links.widget-light.mb-4.pb-2
                  h3.widget-title.text-white Components
                  ul.widget-list
                    li()&attributes(pageTitle === 'Alerts' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='alerts.html').widget-list-link Alerts
                    li()&attributes(pageTitle === 'Badges' ? {'class': 'widget-list-item active'} : {'class': 'widget-list-item'})
                      a(href='badge.html').widget-list-link Badges
