// Top left
.toast-container.toast-top-left
  #default-toast.toast(data-delay='5000' role='alert' aria-live='assertive' aria-atomic='true')
    .toast-header
      .d-inline-block.align-middle.bg-primary.rounded.mr-2(style='width: 1.25rem; height: 1.25rem;')
      h6.font-size-sm.mb-0.mr-auto Bootstrap
      small 11 mins ago
      button(type='button' data-dismiss='toast' aria-label='Close').close.ml-2.mb-1
        span(aria-hidden='true') &times;
    .toast-body Hello, world! This is a toast message.

  #primary-toast.toast.mb-3(data-delay='5000' role='alert' aria-live='assertive' aria-atomic='true')
    .toast-header.bg-primary.text-white
      i.czi-bell.mr-2
      h6.font-size-sm.text-white.mb-0.mr-auto Primary toast
      button(type='button' data-dismiss='toast' aria-label='Close').close.text-white.ml-2.mb-1
        span(aria-hidden='true') &times;
    .toast-body.text-primary Hello, world! This is a toast message.


