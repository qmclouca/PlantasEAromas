// Quick View Modal
#quick-view.modal-quick-view.modal.fade(tabindex='-1')
  .modal-dialog.modal-xl
    .modal-content
      .modal-header
        h4.modal-title.product-title
          a(href='shop-single-v1.html' data-toggle='tooltip' data-placement='right' title='Go to product page')
            | Sports Hooded Sweatshirt
            i.czi-arrow-right.font-size-lg.ml-2
        button(type='button' class='close' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        .row

          // Product gallery
          .col-lg-7.pr-lg-0
            .cz-product-gallery
              .cz-preview.order-sm-2
                #first.cz-preview-item.active
                  img(src='img/shop/single/gallery/01.jpg' data-zoom='img/shop/single/gallery/01.jpg' alt='Product image').cz-image-zoom
                  .cz-image-zoom-pane
                #second.cz-preview-item
                  img(src='img/shop/single/gallery/02.jpg' data-zoom='img/shop/single/gallery/02.jpg' alt='Product image').cz-image-zoom
                  .cz-image-zoom-pane
                #third.cz-preview-item
                  img(src='img/shop/single/gallery/03.jpg' data-zoom='img/shop/single/gallery/03.jpg' alt='Product image').cz-image-zoom
                  .cz-image-zoom-pane
                #fourth.cz-preview-item
                  img(src='img/shop/single/gallery/04.jpg' data-zoom='img/shop/single/gallery/04.jpg' alt='Product image').cz-image-zoom
                  .cz-image-zoom-pane
              .cz-thumblist.order-sm-1
                a(href='#first').cz-thumblist-item.active
                  img(src='img/shop/single/gallery/th01.jpg' alt='Product thumb')
                a(href='#second').cz-thumblist-item
                  img(src='img/shop/single/gallery/th02.jpg' alt='Product thumb')
                a(href='#third').cz-thumblist-item
                  img(src='img/shop/single/gallery/th03.jpg' alt='Product thumb')
                a(href='#fourth').cz-thumblist-item
                  img(src='img/shop/single/gallery/th04.jpg' alt='Product thumb')

          // Product details
          .col-lg-5.pt-4.pt-lg-0.cz-image-zoom-pane
            .product-details.ml-auto.pb-3
              .d-flex.justify-content-between.align-items-center.mb-2
                a(href='shop-single-v1.html#reviews')
                  +star-rating(4)
                  span.d-inline-block.font-size-sm.text-body.align-middle.mt-1.ml-1 74 Reviews
                button(type='button' data-toggle='tooltip' title='Add to wishlist').btn-wishlist
                  i.czi-heart
              .mb-3
                span.h3.font-weight-normal.text-accent.mr-1 $18.<small>99</small>
                del.text-muted.font-size-lg.mr-3 $25.<small>00</small>
                span.badge.badge-danger.badge-shadow.align-middle.mt-n2 Sale
              .font-size-sm.mb-4
                span.text-heading.font-weight-medium.mr-1 Color:
                span.text-muted Red/Dark blue/White
              .position-relative.mr-n4.mb-3
                .custom-control.custom-option.custom-control-inline.mb-2
                  input(type='radio' name='color' id='color1' checked).custom-control-input
                  label(for='color1').custom-option-label.rounded-circle
                    span(style='background-image: url(img/shop/single/color-opt-1.png)').custom-option-color.rounded-circle
                .custom-control.custom-option.custom-control-inline.mb-2
                  input(type='radio' name='color' id='color2').custom-control-input
                  label(for='color2').custom-option-label.rounded-circle
                    span(style='background-image: url(img/shop/single/color-opt-2.png)').custom-option-color.rounded-circle
                .custom-control.custom-option.custom-control-inline.mb-2
                  input(type='radio' name='color' id='color3').custom-control-input
                  label(for='color3').custom-option-label.rounded-circle
                    span(style='background-image: url(img/shop/single/color-opt-3.png)').custom-option-color.rounded-circle
                .product-badge.product-available.mt-n1
                  i.czi-security-check
                  | Product available
              form.mb-grid-gutter
                .form-group
                  label(for='product-size').font-weight-medium.pb-1 Size:
                  select(required)#product-size.custom-select
                    option(value='') Select size
                    option(value='xs') XS
                    option(value='s') S
                    option(value='m') M
                    option(value='l') L
                    option(value='xl') XL
                .form-group.d-flex.align-items-center
                  select(style='width: 5rem;').custom-select.mr-3
                    option(value='1') 1
                    option(value='2') 2
                    option(value='3') 3
                    option(value='4') 4
                    option(value='5') 5
                  button(type='submit').btn.btn-primary.btn-shadow.btn-block
                    i.czi-cart.font-size-lg.mr-2
                    | Add to Cart
              h5.h6.mb-3.pb-2.border-bottom
                i.czi-announcement.text-muted.font-size-lg.align-middle.mt-n1.mr-2
                | Product info
              h6.font-size-sm.mb-2 Style
              ul.font-size-sm.pl-4
                li Hooded top
              h6.font-size-sm.mb-2 Composition
              ul.font-size-sm.pl-4
                li Elastic rib: Cotton 95%, Elastane 5%
                li Lining: Cotton 100%
                li Cotton 80%, Polyester 20%
              h6.font-size-sm.mb-2 Art. No.
              ul.font-size-sm.pl-4.mb-0
                li 183260098
