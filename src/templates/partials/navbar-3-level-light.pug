// Navbar 3 Level (Light)
header.box-shadow-sm

  //- topbar.pug template
  include topbar

  // Remove "navbar-sticky" class to make navigation bar scrollable with the page.
  .navbar-sticky.bg-light
    .navbar.navbar-expand-lg.navbar-light
      .container
        a(href='index.html' style='min-width: 7rem;').navbar-brand.d-none.d-sm-block.mr-3.flex-shrink-0
          +image('img/logo-dark.png', 'Cartzilla')(width='142')
        a(href='index.html' style='min-width: 4.625rem;').navbar-brand.d-sm-none.mr-2
          +image('img/logo-icon.png', 'Cartzilla')(width='74')
        .input-group-overlay.d-none.d-lg-flex.mx-4
          input(type='text' placeholder='Search for products').form-control.appended-form-control
          .input-group-append-overlay
            span.input-group-text
              i.czi-search
        .navbar-toolbar.d-flex.flex-shrink-0.align-items-center
          button(type='button' data-toggle='collapse' data-target='#navbarCollapse').navbar-toggler
            span.navbar-toggler-icon
          a(href='#').navbar-tool.navbar-stuck-toggler
            span.navbar-tool-tooltip Expand menu
            .navbar-tool-icon-box: i.navbar-tool-icon.czi-menu
          a(href='account-wishlist.html').navbar-tool.d-none.d-lg-flex
            span.navbar-tool-tooltip Wishlist
            .navbar-tool-icon-box: i.navbar-tool-icon.czi-heart
          a(href='#signin-modal' data-toggle='modal').navbar-tool.ml-1.ml-lg-0.mr-n1.mr-lg-2
            .navbar-tool-icon-box: i.navbar-tool-icon.czi-user
            .navbar-tool-text.ml-n3
              small Hello, Sign in
              | My Account
          .navbar-tool.dropdown.ml-3
            a(href='shop-cart.html').navbar-tool-icon-box.bg-secondary.dropdown-toggle
              span.navbar-tool-label 4
              i.navbar-tool-icon.czi-cart
            a(href='shop-cart.html').navbar-tool-text
              small My Cart
              | $265.00
              
            //- cart-dropdown.pug template
            include cart-dropdown

    .navbar.navbar-expand-lg.navbar-light.navbar-stuck-menu.mt-n2.pt-0.pb-2
      .container
        #navbarCollapse.collapse.navbar-collapse

          // Search
          .input-group-overlay.d-lg-none.my-3
            .input-group-prepend-overlay
              span.input-group-text
                i.czi-search
            input(type='text' placeholder='Search for products').form-control.prepended-form-control

          //- menu-departments.pug
          include menu-departments

          //- menu-primary.pug
          include menu-primary