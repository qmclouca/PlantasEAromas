// Navbar 2 Level (Dark)
header

  // Topbar
  .topbar.topbar-dark.bg-darker
    .container
      .topbar-text.dropdown.d-md-none
        a(href='#' data-toggle='dropdown').topbar-link.dropdown-toggle Useful links
        ul.dropdown-menu
          li
            a(href='tel:00331697720').dropdown-item
              i.czi-support.text-muted.mr-2
              | (00) 33 169 7720
          li
            a(href='order-tracking.html').dropdown-item
              i.czi-location.text-muted.mr-2
              | Order tracking
      .topbar-text.text-nowrap.d-none.d-md-inline-block
        i.czi-support
        span.text-muted.mr-1 Support
        a(href='tel:00331697720').topbar-link (00) 33 169 7720
      .cz-carousel.cz-controls-static.d-none.d-md-block
        .cz-carousel-inner(data-carousel-options='{"mode": "gallery", "nav": false}')
          .topbar-text Free shipping for order over $200
          .topbar-text We return money within 30 days
          .topbar-text Friendly 24/7 customer support
      .ml-3.text-nowrap
        a(href='order-tracking.html').topbar-link.mr-4.d-none.d-md-inline-block
          i.czi-location
          | Order tracking
        .topbar-text.dropdown.disable-autohide
          a(href='#' data-toggle='dropdown').topbar-link.dropdown-toggle
            +image('img/flags/en.png', 'English')(width='20').mr-2
            | Eng / $
          ul.dropdown-menu.dropdown-menu-right
            li.dropdown-item
              select.custom-select.custom-select-sm
                option(value='usd') $ USD
                option(value='eur') € EUR
                option(value='ukp') £ UKP
                option(value='jpy') ¥ JPY
            li
              a(href='#').dropdown-item.pb-1
                +image('img/flags/fr.png', 'Français')(width='20').mr-2
                | Français
            li
              a(href='#').dropdown-item.pb-1
                +image('img/flags/de.png', 'Deutsch')(width='20').mr-2
                | Deutsch
            li
              a(href='#').dropdown-item
                +image('img/flags/it.png', 'Italiano')(width='20').mr-2
                | Italiano

  // Remove "navbar-sticky" class to make navigation bar scrollable with the page.
  .navbar-sticky
    .navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a(href='index.html' style='min-width: 7rem;').navbar-brand.d-none.d-sm-block.mr-4.order-lg-1
          +image('img/logo-light.png', 'Cartzilla')(width='142')
        a(href='index.html' style='min-width: 4.625rem;').navbar-brand.d-sm-none.mr-2.order-lg-1
          +image('img/logo-icon-light.png', 'Cartzilla')(width='74')
        
        .navbar-toolbar.d-flex.align-items-center.order-lg-3
          button(type='button' data-toggle='collapse' data-target='#navbarCollapse').navbar-toggler
            span.navbar-toggler-icon
          a(href='#searchBox' data-toggle='collapse' role='button' aria-expanded='false', aria-controls='searchBox').navbar-tool.d-none.d-lg-flex
            span.navbar-tool-tooltip Search
            .navbar-tool-icon-box: i.navbar-tool-icon.czi-search
          a(href='account-wishlist.html').navbar-tool.d-none.d-lg-flex
            span.navbar-tool-tooltip Wishlist
            .navbar-tool-icon-box: i.navbar-tool-icon.czi-heart
          a(href='#signin-modal' data-toggle='modal').navbar-tool.ml-1.mr-n1
            span.navbar-tool-tooltip Account
            .navbar-tool-icon-box: i.navbar-tool-icon.czi-user
          .navbar-tool.dropdown.ml-3
            a(href='shop-cart.html').navbar-tool-icon-box.bg-secondary.dropdown-toggle
              span.navbar-tool-label 4
              i.navbar-tool-icon.czi-cart

            //- cart-dropdown.pug template
            include cart-dropdown

        #navbarCollapse.collapse.navbar-collapse.mr-auto.order-lg-2

          // Search
          .input-group-overlay.d-lg-none.my-3
            .input-group-prepend-overlay
              span.input-group-text
                i.czi-search
            input(type='text' placeholder='Search for products').form-control.prepended-form-control

          //- menu-primary.pug
          include menu-primary

    // Search collapse
    #searchBox.search-box.collapse
      .card.bg-dark.pt-2.pb-4.border-0.rounded-0
        .container
          .input-group-overlay
            .input-group-prepend-overlay
              span.input-group-text
                i.czi-search
            input(type='text' placeholder='Search for products').form-control.prepended-form-control
