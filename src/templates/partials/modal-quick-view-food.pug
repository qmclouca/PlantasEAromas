// Quick View Modal
#quick-view.modal-quick-view.modal.fade(tabindex='-1')
  .modal-dialog.modal-dialog-centered.modal-xl
    .modal-content
      .modal-header
        h4.modal-title Pizza with Salami and Olives
        button(type='button' class='close' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        .row

          // Product gallery
          .col-lg-7.col-md-6.pr-lg-0
            +image('img/food-delivery/restaurants/single/large-preview.jpg', 'Pizza')

          // Product details
          .col-lg-5.col-md-6.pt-4.pt-lg-0
            .product-details.ml-auto.pb-3
              .mb-3
                span.h3.font-weight-normal.text-accent.mr-1 $15.<small>99</small>
              form.mb-grid-gutter
                .row.mx-n2
                  .col-6.px-2
                    .form-group
                      label(for='pizza-size').font-weight-medium.pb-1 Size:
                      select#pizza-size.custom-select
                        option(value='small') Small
                        option(value='medium') Medium
                        option(value='large') Large
                  .col-6.px-2
                    .form-group
                      label(for='pizza-base').font-weight-medium.pb-1 Base:
                      select#pizza-base.custom-select
                        option(value='standard') Standard
                        option(value='thin') Thin
                .form-group.d-flex.align-items-center
                  select(style='width: 5rem;').custom-select.mr-3
                    option(value='1') 1
                    option(value='2') 2
                    option(value='3') 3
                    option(value='4') 4
                    option(value='5') 5
                  button(type='submit').btn.btn-primary.btn-shadow.btn-block
                    i.czi-cart.font-size-lg.mr-2
                    | Add to Cart
              h5.h6.mb-3.pb-3.border-bottom
                i.czi-announcement.text-muted.font-size-lg.align-middle.mt-n1.mr-2
                | Product info
              h6.font-size-sm.mb-2 Ingredients:
              p.font-size-sm Salami, Olives, Bell pepper, Mushrooms, Mozzarella, Parmesan
              h6.font-size-sm.mb-2 Allergies
              p.font-size-sm Gluten, Dairy
              h6.font-size-sm.mb-2 Calories
              p.font-size-sm.mb-0 811
