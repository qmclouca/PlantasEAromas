// Navbar Electronics Store
header.box-shadow-sm

  // Topbar
  .topbar.topbar-dark.bg-dark
    .container
      div
        .topbar-text.dropdown.disable-autohide
          a(href='#' data-toggle='dropdown').topbar-link.dropdown-toggle
            +image('img/flags/en.png', 'English')(width='20').mr-2
            | Eng / $
          ul.dropdown-menu
            li.dropdown-item
              select.custom-select.custom-select-sm
                option(value='usd') $ USD
                option(value='eur') € EUR
                option(value='ukp') £ UKP
                option(value='jpy') ¥ JPY
            li
              a(href='#').dropdown-item.pb-1
                +image('img/flags/fr.png', 'Français')(width='20').mr-2
                | Français
            li
              a(href='#').dropdown-item.pb-1
                +image('img/flags/de.png', 'Deutsch')(width='20').mr-2
                | Deutsch
            li
              a(href='#').dropdown-item
                +image('img/flags/it.png', 'Italiano')(width='20').mr-2
                | Italiano
        .topbar-text.text-nowrap.d-none.d-md-inline-block.border-left.border-light.pl-3.ml-3
          span.text-muted.mr-1 Available 24/7 at
          a(href='tel:00331697720').topbar-link (00) 33 169 7720
      .topbar-text.dropdown.d-md-none.ml-auto
        a(href='#' data-toggle='dropdown').topbar-link.dropdown-toggle Wishlist / Compare / Track
        ul.dropdown-menu.dropdown-menu-right
          li
            a(href='account-wishlist.html').dropdown-item
              i.czi-heart.text-muted.mr-2
              | Wishlist (3)
          li
            a(href='comparison.html').dropdown-item
              i.czi-compare.text-muted.mr-2
              | Compare (3)
          li
            a(href='order-tracking.html').dropdown-item
              i.czi-location.text-muted.mr-2
              | Order tracking
      .d-none.d-md-block.ml-3.text-nowrap
        a(href='account-wishlist.html').topbar-link.d-none.d-md-inline-block
          i.czi-heart.mt-n1
          | Wishlist (3)
        a(href='comparison.html').topbar-link.ml-3.pl-3.border-left.border-light.d-none.d-md-inline-block
          i.czi-compare.mt-n1
          | Compare (3)
        a(href='order-tracking.html').topbar-link.ml-3.border-left.border-light.pl-3.d-none.d-md-inline-block
          i.czi-location.mt-n1
          | Order tracking

  // Remove "navbar-sticky" class to make navigation bar scrollable with the page.
  .navbar-sticky.bg-light
    .navbar.navbar-expand-lg.navbar-light
      .container
        a(href='index.html' style='min-width: 7rem;').navbar-brand.d-none.d-sm-block.mr-3.flex-shrink-0
          +image('img/logo-dark.png', 'Cartzilla')(width='142')
        a(href='index.html' style='min-width: 4.625rem;').navbar-brand.d-sm-none.mr-2
          +image('img/logo-icon.png', 'Cartzilla')(width='74')

        // Search
        .input-group-overlay.d-none.d-lg-block.mx-4
          .input-group-prepend-overlay
            span.input-group-text
              i.czi-search
          input(type='text' placeholder='Search for products').form-control.prepended-form-control.appended-form-control
          .input-group-append-overlay
            select.custom-select
              option All categories
              option Computers
              option Smartphones
              option TV, Video, Audio
              option Cameras
              option Headphones
              option Wearables
              option Printers
              option Video Games
              option Home Music
              option Data Storage
        
        // Toolbar
        .navbar-toolbar.d-flex.flex-shrink-0.align-items-center
          button(type='button' data-toggle='collapse' data-target='#navbarCollapse').navbar-toggler
            span.navbar-toggler-icon
          a(href='#').navbar-tool.navbar-stuck-toggler
            span.navbar-tool-tooltip Expand menu
            .navbar-tool-icon-box: i.navbar-tool-icon.czi-menu
          a(href='#signin-modal' data-toggle='modal').navbar-tool.ml-1.ml-lg-0.mr-n1.mr-lg-2
            .navbar-tool-icon-box: i.navbar-tool-icon.czi-user
            .navbar-tool-text.ml-n3
              small Hello, Sign in
              | My Account
          .navbar-tool.dropdown.ml-3
            a(href='shop-cart.html').navbar-tool-icon-box.bg-secondary.dropdown-toggle
              span.navbar-tool-label 4
              i.navbar-tool-icon.czi-cart
            a(href='shop-cart.html').navbar-tool-text
